<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 全屏对话框 -->
    <style name="FullScreenDialog">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- 全屏对话框(背景透明) -->
    <style name="FullScreenDialogTrans" parent="FullScreenDialog">
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <!-- 底部弹出对话框动画 -->
    <style name="BottomDialogAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/anim_dialog_bottom_enter</item>
        <item name="android:windowExitAnimation">@anim/anim_dialog_bottom_exit</item>
    </style>
    <style name="DialogShowAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_top_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_bottom_out</item>
    </style>
</resources>